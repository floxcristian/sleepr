# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://admin:strongpassword123@mongo:27017/sleepr?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=strongpassword123
MONGO_DATABASE=sleepr

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1d
JWT_SECURE_COOKIE=false
JWT_COOKIE_DOMAIN=localhost

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3001
TCP_PORT=3002

# ==============================================
# MICROSERVICES CONFIGURATION
# ==============================================
AUTH_HOST=auth
AUTH_PORT=3001
AUTH_TCP_PORT=3002

PAYMENT_HOST=payment
PAYMENT_PORT=3003
PAYMENT_TCP_PORT=3004

NOTIFICATION_HOST=notification  
NOTIFICATION_PORT=3005
NOTIFICATION_TCP_PORT=3006

# ==============================================
# EXTERNAL SERVICES
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Email configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ==============================================
# SECURITY
# ==============================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
